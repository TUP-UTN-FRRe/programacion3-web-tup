@using FifaClubWorldCup.Core.Entidades
@model List<Equipo>

@{
}

<h1>Equipos</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>País</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var equipo in Model)
        {
            <tr>
                <td>
                    <img src="@equipo.ImagenUrl" 
                         alt="Escudo de @equipo.Nombre" 
                         style="width: 50px; height: 50px;" class="me-2" />
                        
                    @equipo.Nombre
                
                </td>
                <td>@equipo.Pais</td>
            </tr>
        }
    </tbody>
</table>
